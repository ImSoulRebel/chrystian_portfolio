---
import { ExperienceItem } from '@components';
import { useTranslations, type Locale, translations } from '@utils/i18n';

// Recibir locale como prop en lugar de detectarlo
interface Props {
  locale?: Locale;
}

const { locale = 'es' } = Astro.props;
const t = useTranslations(locale);

// Configuración de experiencias
const experiencesConfig = [
  { key: 'yuvod' as const },
  { key: 'nextival' as const },
  { key: 'optimus' as const },
  { key: 'retail' as const },
];

// Construir experiencias desde traducciones + configuración
const experiences = experiencesConfig.map((config) => {
  const expData = translations[locale as Locale].experience.list[config.key];
  if (!expData) {
    throw new Error(`Missing experience data for key: ${config.key}`);
  }
  return {
    title: expData.title,
    company: expData.company,
    period: expData.period,
    location: expData.location,
    description: expData.description,
    skills: expData.skills,
  };
});
---

<section id="experience" class="experience">
  <div class="container">
    <h2 class="section-title">{t('experience.title')}</h2>
    <p class="section-subtitle">{t('experience.subtitle')}</p>
    <div class="experience-timeline">
      {
        experiences.map((exp, idx) => (
          <div
            class="experience-fadein"
            style={`animation-delay: ${0.1 + idx * 0.12}s`}
          >
            <ExperienceItem
              title={exp.title}
              company={exp.company}
              period={exp.period}
              location={exp.location}
              description={exp.description}
              skills={exp.skills}
            />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .experience {
    padding: 6rem 0;
    background: var(--background-dark);
    position: relative;
  }

  .experience::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--primary-color),
      transparent
    );
    opacity: 0.3;
  }

  .section-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    background: var(--gradient-primary);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 4rem;
    text-align: center;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  .experience-timeline {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .section-subtitle {
    text-align: center;
    margin: 0 auto 2.5rem auto;
    color: var(--text-secondary);
    font-size: 1.15rem;
    font-weight: 400;
    line-height: 1.6;
    max-width: 600px;
  }

  .experience-fadein {
    opacity: 0;
    transform: translateY(40px);
    animation: fadeInExp 0.9s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  @keyframes fadeInExp {
    to {
      opacity: 1;
      transform: none;
    }
  }

  @media (max-width: 900px) {
    .experience-timeline {
      max-width: 98vw;
      gap: 1.5rem;
    }
    .section-title {
      font-size: 2.2rem;
    }
    .section-subtitle {
      font-size: 1rem;
    }
  }

  @media (max-width: 600px) {
    .experience {
      padding: 3.5rem 0;
    }
    .experience-timeline {
      gap: 1rem;
    }
    .section-title {
      font-size: 1.5rem;
    }
    .section-subtitle {
      font-size: 0.95rem;
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .experience {
      padding: 4rem 0;
    }

    .section-title {
      margin-bottom: 3rem;
    }

    .experience-timeline {
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 1rem;
    }

    .experience-timeline {
      gap: 1.25rem;
    }
  }
</style>
