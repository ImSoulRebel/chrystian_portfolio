---
import { ExperienceItem } from '@components';
import { useTranslations, type Locale, translations } from '@utils/i18n';

// Recibir locale como prop en lugar de detectarlo
interface Props {
  locale?: Locale;
}

const { locale = 'es' } = Astro.props;
const t = useTranslations(locale);

// Configuración de experiencias
const experiencesConfig = [
  { key: 'yuvod' as const },
  { key: 'nextival' as const },
  { key: 'optimus' as const },
  { key: 'retail' as const },
];

// Construir experiencias desde traducciones + configuración
const experiences = experiencesConfig.map((config) => {
  const expData = translations[locale as Locale].experience.list[config.key];
  if (!expData) {
    throw new Error(`Missing experience data for key: ${config.key}`);
  }
  return {
    title: expData.title,
    company: expData.company,
    period: expData.period,
    location: expData.location,
    description: expData.description,
    skills: expData.skills,
  };
});
---

<section id="experience" class="experience">
  <div class="container">
    <h2 class="section-title">{t('experience.title')}</h2>
    <div class="experience-timeline">
      {
        experiences.map((exp) => (
          <ExperienceItem
            title={exp.title}
            company={exp.company}
            period={exp.period}
            location={exp.location}
            description={exp.description}
            skills={exp.skills}
          />
        ))
      }
    </div>
  </div>
</section>

<style>
  .experience {
    padding: 6rem 0;
    background: var(--background-card);
    position: relative;
  }

  .experience::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--primary-color),
      transparent
    );
    opacity: 0.3;
  }

  .section-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    background: var(--gradient-primary);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 4rem;
    text-align: center;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  .experience-timeline {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .experience {
      padding: 4rem 0;
    }

    .section-title {
      margin-bottom: 3rem;
    }

    .experience-timeline {
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 1rem;
    }

    .experience-timeline {
      gap: 1.25rem;
    }
  }
</style>
