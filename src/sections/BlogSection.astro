---
import BlogHeaderSection from './BlogHeaderSection.astro';
import BlogContentSection from './BlogContentSection.astro';

interface BlogSectionProps {
  title: Record<string, string>;
  description?: Record<string, string>;
  author?: string;
  tags?: string[];
  createdAt: string;
  updatedAt?: string;
  image?: string;
  lang: 'es' | 'en';
  Content: any;
}

const {
  title,
  description,
  author,
  tags,
  createdAt,
  updatedAt,
  image,
  lang,
  Content,
} = Astro.props as BlogSectionProps;
---

<article class="blog-post" itemscope itemtype="https://schema.org/BlogPosting">
  <BlogHeaderSection
    title={title}
    description={description}
    author={author}
    tags={tags}
    createdAt={createdAt}
    updatedAt={updatedAt}
    lang={lang}
  />
  <BlogContentSection
    image={image}
    title={title}
    lang={lang}
    Content={Content}
  />
</article>
<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    margin-top: 3.5rem;
  }
</style>
