---
import { Icon, ContactForm } from '@components';
import { getLocaleFromUrl, useTranslations } from '@utils/i18n';
import { PUBLIC_CONTACT_EMAIL } from 'astro:env/client';

// Detectar el locale actual y obtener traducciones
const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const contactEmail = PUBLIC_CONTACT_EMAIL;
---

<section id="contact" class="contact">
  <div class="container">
    <div class="contact-content">
      <h2 class="section-title">{t('contact.title')}</h2>
      <p class="hero-description">
        {t('contact.description')}
      </p>

      <div class="contact-layout">
        <!-- Información de contacto -->
        <div class="contact-info">
          <h3 class="contact-info-title">Información de contacto</h3>

          <a href="mailto:chrystianmichell@hotmail.com" class="contact-item">
            <div class="contact-icon">
              <Icon color="var(--background-dark)" name="email" size={24} />
            </div>
            <div class="contact-details">
              <h4>Email</h4>
              <span>{contactEmail}</span>
            </div>
          </a>

          <a href="tel:+34653316944" class="contact-item">
            <div class="contact-icon">
              <Icon color="var(--background-dark)" name="phone" size={24} />
            </div>
            <div class="contact-details">
              <h4>Teléfono</h4>
              <span>+34 653 31 69 44</span>
            </div>
          </a>

          <a
            href="https://linkedin.com/in/chrystianmichell"
            target="_blank"
            rel="noopener"
            class="contact-item"
          >
            <div class="contact-icon">
              <Icon color="var(--background-dark)" name="linkedin" size={24} />
            </div>
            <div class="contact-details">
              <h4>LinkedIn</h4>
              <span>linkedin.com/in/chrystianmichell</span>
            </div>
          </a>

          <a
            href="https://github.com/ImSoulRebel"
            target="_blank"
            rel="noopener"
            class="contact-item"
          >
            <div class="contact-icon">
              <Icon color="var(--background-dark)" name="github" size={24} />
            </div>
            <div class="contact-details">
              <h4>GitHub</h4>
              <span>github.com/ImSoulRebel</span>
            </div>
          </a>
        </div>

        <!-- Formulario de contacto -->
        <div class="contact-form-wrapper">
          <h3 class="contact-form-title">Envía un mensaje</h3>
          <ContactForm />
        </div>
      </div>

      <div class="hero-cta">
        <a
          href="mailto:chrystianmichell@hotmail.com?subject=Propuesta de colaboración"
          class="btn btn-primary"
        >
          Enviar Email Directo
        </a>
        <a
          href="https://linkedin.com/in/chrystianmichell"
          class="btn btn-outline"
          target="_blank"
          rel="noopener"
        >
          Conectar en LinkedIn
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Layout principal */
  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin: 3rem 0;
  }

  /* Información de contacto */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-info-title,
  .contact-form-title {
    color: var(--text-primary);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--gradient-secondary);
    border-radius: var(--border-radius);
    border: 1px solid rgba(0, 212, 255, 0.1);
    text-decoration: none;
    transition: var(--transition);
    color: var(--text-primary);
  }

  .contact-item:hover {
    transform: translateY(-2px);
    border-color: var(--primary-color);
    box-shadow: var(--shadow-dark);
  }

  .contact-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--primary-color);
    border-radius: 50%;
    flex-shrink: 0;
  }

  .contact-details h4 {
    color: var(--text-primary);
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
  }

  .contact-details span {
    color: var(--text-muted);
    font-size: 0.95rem;
  }

  /* Wrapper del formulario */
  .contact-form-wrapper {
    display: flex;
    flex-direction: column;
  }

  /* Botones CTA */
  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(0, 212, 255, 0.1);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .contact-layout {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .contact-info-title,
    .contact-form-title {
      text-align: left;
    }
  }

  @media (max-width: 768px) {
    .contact-layout {
      gap: 2rem;
      margin: 2rem 0;
    }

    .contact-item {
      padding: 1rem;
      gap: 0.75rem;
    }

    .contact-icon {
      width: 40px;
      height: 40px;
    }

    .contact-details h4 {
      font-size: 1rem;
    }

    .contact-details span {
      font-size: 0.9rem;
    }

    .hero-cta {
      flex-direction: column;
      align-items: center;
      margin-top: 2rem;
    }

    .hero-cta .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
