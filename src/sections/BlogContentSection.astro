---
import '@styles/blog-post.css';

import type { BlogContentSectionProps } from '@content/types/blog';

const { Content, lang } = Astro.props as BlogContentSectionProps;
---

<div class="prose">
  <section class="content" itemprop="articleBody">
    <Content lang={lang} />
  </section>
</div>
<style>
  .featured-image-wrapper {
    margin-bottom: 1em;
    text-align: center;
  }
  .featured-image {
    max-width: 320px;
    width: 100%;
    border-radius: 0.5em;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }
  .content {
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: 1.2em;
    margin-top: 0;
    color: var(--color-text, #222);
  }
  .content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .content :global(p) {
    margin-bottom: 1.5rem;
  }
  .content :global(code) {
    background: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.9em;
  }
  .content :global(pre) {
    background: #1e1e1e;
    color: #d4d4d4;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
  }
  .blog-content-section {
    width: 100%;
    max-width: 800px;
    margin: 0 auto 3rem auto;
    padding: 0 1.5rem;
  }
  @media (max-width: 900px) {
    .blog-content-section {
      max-width: 100%;
      padding: 0 1rem;
      margin-bottom: 2rem;
    }
  }
  @media (max-width: 600px) {
    .blog-content-section {
      padding: 0 0.5rem;
      margin-bottom: 1.5rem;
    }
  }
  /* Fin de optimización visual y responsiva para la sección de contenido de blog */
</style>
