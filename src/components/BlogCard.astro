---
// BlogCard.astro: Tarjeta de blog con el mismo dise√±o que ProjectCard
import styles from './BlogCard.module.css';
const { title, description, author, date, tags, href } = Astro.props;
---

<a href={href} class={styles.blogCard} aria-label={title} tabindex="0">
  <div class={styles.blogCardContent}>
    <h3 class={styles.blogCardTitle}>{title}</h3>
    <div class={styles.blogCardMeta}>
      {author && <span class={styles.blogCardAuthor}>üñäÔ∏è {author}</span>}
      {
        date && (
          <span class={styles.blogCardDate}>
            {new Date(date).toLocaleDateString('es-ES', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </span>
        )
      }
    </div>
    {description && <p class={styles.blogCardDescription}>{description}</p>}
    {
      Array.isArray(tags) && tags.length > 0 && (
        <div class={styles.blogCardTags}>
          {tags.map((tag) => (
            <span class={styles.blogCardTag}>{tag}</span>
          ))}
        </div>
      )
    }
  </div>
</a>
