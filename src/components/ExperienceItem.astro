---
import Icon from './Icon.astro';

const { title, company, period, description, skills, location } = Astro.props;

// Mapeo de empresas a sus logos
const companyLogos = {
  YUVOD: 'yuvod',
  NEXTIVAL: 'nextival',
  'OPTIMUS APPS LAB': 'optimus',
  'World Duty Free Group': 'default',
  Fnac: 'default',
  Worten: 'default',
  Carrefour: 'default',
};

const companyLogo =
  companyLogos[company as keyof typeof companyLogos] || 'default';
---

<div class="experience-item">
  <div class="timeline-marker">
    <div class="timeline-dot"></div>
  </div>

  <div class="experience-content">
    <div class="experience-header">
      <h3 class="experience-title">{title}</h3>
      <div class="experience-meta">
        <div class="company-info">
          {
            companyLogo !== 'default' && (
              <Icon name={companyLogo} size={24} class="company-logo" />
            )
          }
          <span class="company">{company}</span>
        </div>
        {location && <span class="location">üìç {location}</span>}
      </div>
      <span class="period">{period}</span>
    </div>

    <p class="experience-description">{description}</p>

    {
      skills && (
        <div class="experience-skills">
          {skills.map((skill: string) => (
            <span class="skill-badge">{skill}</span>
          ))}
        </div>
      )
    }
  </div>
</div>

<style>
  .experience-item {
    position: relative;
    padding-left: 3rem;
    margin-bottom: 3rem;
  }

  .experience-item:last-child {
    margin-bottom: 0;
  }

  .timeline-marker {
    position: absolute;
    left: 0;
    top: 1rem;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .timeline-marker::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 40px;
    width: 2px;
    height: calc(100% + 2rem);
    background: rgba(0, 212, 255, 0.3);
    transform: translateX(-50%);
  }

  .experience-item:last-child .timeline-marker::before {
    display: none;
  }

  .timeline-dot {
    width: 16px;
    height: 16px;
    background: var(--gradient-primary);
    border-radius: 50%;
    border: 3px solid var(--background-dark);
    box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.3);
    transition: var(--transition);
  }

  .experience-item:hover .timeline-dot {
    transform: scale(1.2);
    box-shadow: 0 0 0 6px rgba(0, 212, 255, 0.2);
  }

  .experience-content {
    background: var(--background-card);
    padding: 2rem;
    border-radius: var(--border-radius);
    border: 1px solid rgba(0, 212, 255, 0.1);
    transition: var(--transition);
    position: relative;
  }

  .experience-content::before {
    content: '';
    position: absolute;
    left: -12px;
    top: 2rem;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 8px 12px 8px 0;
    border-color: transparent var(--background-card) transparent transparent;
  }

  .experience-item:hover .experience-content {
    transform: translateY(-5px);
    box-shadow: var(--shadow-light);
    border-color: var(--primary-color);
  }

  .experience-header {
    margin-bottom: 1.5rem;
  }

  .experience-title {
    color: var(--text-primary);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .experience-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .company-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .company-logo {
    flex-shrink: 0;
  }

  .company {
    color: var(--primary-color);
    font-weight: 600;
    font-size: 1.1rem;
  }

  .location {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .period {
    color: var(--text-muted);
    font-size: 0.9rem;
    font-weight: 500;
    background: rgba(0, 212, 255, 0.1);
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    border: 1px solid rgba(0, 212, 255, 0.2);
  }

  .experience-description {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .experience-skills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-badge {
    background: rgba(0, 212, 255, 0.1);
    color: var(--primary-color);
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    font-size: 0.8rem;
    font-weight: 500;
    border: 1px solid rgba(0, 212, 255, 0.2);
    transition: var(--transition);
  }

  .skill-badge:hover {
    background: rgba(0, 212, 255, 0.2);
    transform: translateY(-1px);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .experience-item {
      padding-left: 2rem;
    }

    .timeline-marker {
      width: 30px;
      height: 30px;
    }

    .timeline-dot {
      width: 12px;
      height: 12px;
    }

    .experience-content {
      padding: 1.5rem;
    }

    .experience-content::before {
      left: -8px;
      border-width: 6px 8px 6px 0;
    }

    .experience-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
