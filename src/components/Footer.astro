---
import {
  PUBLIC_LINKEDIN_URL,
  PUBLIC_GITHUB_USERNAME,
  PUBLIC_CONTACT_EMAIL,
  PUBLIC_AUTHOR_NAME,
  PUBLIC_CONTACT_PHONE,
  PUBLIC_CONTACT_ADDRESS,
} from 'astro:env/client';
import {
  splitEmail,
  splitPhone,
  useTranslations,
  getRelativeLocaleUrl,
  type Locale,
} from '@utils';
import Icon from './Icon.astro';

interface Props {
  hasNavLinks?: boolean;
  locale?: Locale;
  pageType?: 'home' | 'projects' | 'blog' | 'contact' | '404';
}

const {
  locale = 'es' as Locale,
  hasNavLinks = true,
  pageType = 'home',
} = Astro.props as Props;

const t = useTranslations(locale);

const homeUrl = getRelativeLocaleUrl(locale, '');

// Determine contact CTA URL based on page type
const contactCTAUrl =
  pageType === 'contact' ||
  pageType === 'blog' ||
  pageType === '404' ||
  pageType === 'projects'
    ? getRelativeLocaleUrl(locale, '/contact')
    : '#contact';

const currentYear = new Date().getFullYear();

const githubUrl = `https://github.com/${PUBLIC_GITHUB_USERNAME}`;
const linkedinUrl = PUBLIC_LINKEDIN_URL;
const authorName = PUBLIC_AUTHOR_NAME;

const { user, domain } = splitEmail(PUBLIC_CONTACT_EMAIL);
const { prefix: phonePrefix, number: phoneNumber } =
  splitPhone(PUBLIC_CONTACT_PHONE);

const socialLinks = [
  {
    name: 'GitHub',
    url: githubUrl,
    icon: 'github',
  },
  {
    name: 'LinkedIn',
    url: linkedinUrl,
    icon: 'linkedin',
  },
  {
    name: 'Email',
    url: `mailto:${user}@${domain}`,
    icon: 'email',
  },
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-main">
        <div class="footer-brand">
          <h3>{authorName}</h3>
          <p>{t('footer.position')}</p>
          <p class="footer-tagline">
            {t('footer.tagline')}<Icon
              name="flutter"
              size="16"
              style="display: inline; color: var(--primary-color);"
            />
          </p>
        </div>

        <div class="footer-links">
          <div class="footer-section">
            <h4>{t('footer.nav.title')}</h4>

            {
              hasNavLinks ? (
                <ul>
                  <li>
                    <a href="#home">{t('footer.nav.home')}</a>
                  </li>
                  <li>
                    <a href="#about">{t('footer.nav.about')}</a>
                  </li>
                  <li>
                    <a href="#projects">{t('footer.nav.projects')}</a>
                  </li>
                  <li>
                    <a href="#experience">{t('footer.nav.experience')}</a>
                  </li>
                  <li>
                    <a href="#contact">{t('footer.nav.contact')}</a>
                  </li>
                </ul>
              ) : (
                <ul>
                  <li>
                    <a href={homeUrl}>{t('footer.nav.home')}</a>
                  </li>
                </ul>
              )
            }
          </div>

          <div class="footer-section">
            <h4>{t('footer.tech.title')}</h4>
            <ul>
              <li>{t('footer.tech.flutter')}</li>
              <li>{t('footer.tech.firebase')}</li>
              <li>{t('footer.tech.javascript')}</li>
              <li>{t('footer.tech.react')}</li>
              <li>{t('footer.tech.ciCd')}</li>
            </ul>
          </div>

          <div class="footer-section">
            <h4>{t('footer.contact.title')}</h4>
            <ul>
              <li>
                <a href={`mailto:${user}@${domain}`}>
                  {user}@{domain}
                </a>
              </li>
              <li>
                <a href={`tel:${phonePrefix}${phoneNumber}`}
                  >{phonePrefix}{phoneNumber}</a
                >
              </li>
              <li>{PUBLIC_CONTACT_ADDRESS}</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="footer-social">
        <div class="social-links">
          {
            socialLinks.map((social) => (
              <a
                href={social.url}
                class="social-link"
                target="_blank"
                rel="noopener noreferrer"
                title={social.name}
              >
                <Icon name={social.icon} size="24" />
              </a>
            ))
          }
        </div>

        <div class="footer-cta">
          <p>{t('footer.contact.subtitle')}</p>
          <a href={contactCTAUrl} class="btn btn-primary btn-sm"
            >{t('footer.contact.cta')}</a
          >
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="footer-divider"></div>
      <div class="footer-copyright">
        <p>
          © {currentYear}
          {authorName}. {t('footer.rights')}
        </p>
        <p class="footer-made">
          {t('footer.madeWith')} ❤️ {t('and')}
          <strong>Astro</strong>
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--gradient-secondary);
    color: var(--text-secondary);
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--gradient-primary);
  }

  .footer-content {
    padding: 4rem 0 2rem 0;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-brand h3 {
    color: var(--text-primary);
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-brand p {
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  .footer-tagline {
    color: var(--text-muted);
    font-style: italic;
    margin-top: 1rem;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .footer-section h4 {
    color: var(--text-primary);
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    position: relative;
  }

  .footer-section h4::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 30px;
    height: 2px;
    background: var(--gradient-primary);
    border-radius: 1px;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section li {
    margin-bottom: 0.8rem;
  }

  .footer-section a {
    color: var(--text-secondary);
    transition: var(--transition);
    font-size: 0.95rem;
    display: inline-block;
  }

  .footer-section a:hover {
    color: var(--primary-color);
    transform: translateX(0.5rem);
  }

  .footer-social {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 0;
    border-top: 1px solid rgba(0, 212, 255, 0.1);
    border-bottom: 1px solid rgba(0, 212, 255, 0.1);
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    width: 50px;
    height: 50px;
    background: rgba(0, 212, 255, 0.1);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-color);
    transition: var(--transition);
    text-decoration: none;
  }

  .social-link:hover {
    background: var(--primary-color);
    color: var(--background-dark);
    transform: translateY(-3px);
    box-shadow: var(--shadow-light);
  }

  .footer-cta {
    text-align: right;
  }

  .footer-cta p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }

  .btn-sm {
    padding: 0.8rem 1.5rem;
    font-size: 0.9rem;
  }

  .footer-bottom {
    padding: 2rem 0;
  }

  .footer-divider {
    height: 1px;
    background: rgba(0, 212, 255, 0.1);
    margin-bottom: 2rem;
  }

  .footer-copyright {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-copyright p {
    margin: 0;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .footer-made {
    text-align: right;
  }

  .footer-made strong {
    color: var(--primary-color);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-social {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }

    .footer-cta {
      text-align: center;
    }

    .footer-copyright {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }

    .footer-made {
      text-align: center;
    }

    .social-links {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer-content {
      padding: 3rem 0 1.5rem 0;
    }

    .social-link {
      width: 45px;
      height: 45px;
    }
  }
</style>
