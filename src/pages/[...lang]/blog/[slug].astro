---
import { getCollection, type CollectionEntry } from 'astro:content';
import type { BlogPostData } from '@content/config';
import { BlogSection } from '@sections';
import { Layout } from '@layouts';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog', ({ data }) => {
    // Filtrar solo posts publicados
    return data.status === 'published';
  });

  return blogPosts.flatMap((post) => [
    {
      params: { lang: 'es', slug: post.slug }, // ✅ CAMBIO: post.id → post.slug
      props: { post, lang: 'es' },
    },
    {
      params: { lang: 'en', slug: post.slug }, // ✅ CAMBIO: post.id → post.slug
      props: { post, lang: 'en' },
    },
  ]);
}

interface BlogPageProps {
  post: CollectionEntry<'blog'> & { data: BlogPostData };
  lang: 'es' | 'en';
}

const { post, lang } = Astro.props as BlogPageProps;
const { Content } = await post.render();

// Obtener título y descripción según idioma
const title =
  typeof post.data.title === 'object' ? post.data.title[lang] : post.data.title;

const description =
  typeof post.data.description === 'object'
    ? post.data.description[lang]
    : post.data.description || '';
---

<Layout
  title={title}
  description={description ?? ''}
  layoutContext={{ locale: lang, hasNavLinks: false, pageType: 'blog' }}
>
  <BlogSection post={post} lang={lang} Content={Content} />
</Layout>
