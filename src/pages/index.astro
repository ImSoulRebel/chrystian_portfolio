---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AboutSection from '../sections/AboutSection.astro';
import HighlightsSection from '../sections/HighlightsSection.astro';
import SkillsSection from '../sections/SkillsSection.astro';
import ExperienceSection from '../sections/ExperienceSection.astro';
import ProjectsSection from '../sections/ProjectsSection.astro';
import ContactSection from '../sections/ContactSection.astro';
import HeroSection from '../sections/HeroSection.astro';
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Chrystian Michell - Líder Técnico & Arquitecto Flutter especializado en desarrollo multiplataforma. Más de 5 años de experiencia, 10+ apps en producción en 11 países."
    />
    <meta
      name="keywords"
      content="Flutter Developer, Dart, Tech Lead, Clean Architecture, BLoC Pattern, Desarrollo Multiplataforma, Apps Móviles, Smart TV, OTT Platform, Liderazgo Técnico"
    />
    <meta name="author" content="Chrystian Michell" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://chrystianmichell.dev/" />
    <meta
      property="og:title"
      content="Chrystian Michell | Líder Técnico & Arquitecto Flutter"
    />
    <meta
      property="og:description"
      content="Líder Técnico & Arquitecto Flutter especializado en desarrollo multiplataforma. Más de 5 años de experiencia, 10+ apps en producción en 11 países."
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://chrystianmichell.dev/" />
    <meta
      property="twitter:title"
      content="Chrystian Michell | Líder Técnico & Arquitecto Flutter"
    />
    <meta
      property="twitter:description"
      content="Líder Técnico & Arquitecto Flutter especializado en desarrollo multiplataforma."
    />

    <title>Chrystian Michell | Líder Técnico & Arquitecto Flutter</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <Header />

    <HeroSection />

    <AboutSection />

    <HighlightsSection />

    <SkillsSection />

    <ExperienceSection />

    <ProjectsSection />

    <ContactSection />

    <Footer />

    <script>
      import { App } from '../scripts/app.js';

      // Initialize main application
      new App();
    </script>
  </body>
</html>
